{% extends 'base.html.twig' %}

{% block title %}Liste des adresses du contact {{ contact_id }}{% endblock %}

{% block body %}
    <h1>Liste des adresses du contact {{ contact_id }}</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Titre</th>
                <th>Adresse</th>
                <th>Code postal</th>
                <th>Ville</th>
                <th>Pays</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for adresse in adresses %}
            <tr>
                <td>{{ adresse.titre }}</td>
                <td>{{ adresse.adresse }}</td>
                <td>{{ adresse.codepostal }}</td>
                <td>{{ adresse.ville }}</td>
                <td>{{ adresse.pays }}</td>
                <td class="action">
                    <a class="btn btn-primary" href="{{ path('adresse_edit', {'id': adresse.id}) }}">Modifier</a>
                    {{ include('adresse/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Pas d'adresses pour le moment</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-success" href="{{ path('adresse_new', {'contact_id' : contact_id}) }}">Ajouter une nouvelle adresse</a>
{% endblock %}
